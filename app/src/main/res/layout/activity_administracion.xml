<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usuario.comandasrestaurante.AdministracionActivity">

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Popup"
        android:clickable="false"
        android:background="@drawable/abc_ic_menu_overflow_material"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="false"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/settings">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/nMesas"
            android:contextClickable="false"
            android:enabled="true"
            android:text="20"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center_horizontal"
            android:maxWidth="50dp"
            android:minWidth="30dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/botonMenos" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/botonMas"
            android:src="@android:drawable/ic_media_ff"
            android:layout_marginLeft="0dp"
            android:layout_row="0"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/nMesas"
            android:layout_toEndOf="@+id/nMesas" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/botonMenos"
            android:src="@android:drawable/ic_media_rew"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de mesas: "
            android:id="@+id/textView3"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp"
            android:textStyle="bold" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:text="OK"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/botonMas" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/autoCompleteTextView"
            android:layout_below="@+id/nMesas"
            android:layout_alignParentStart="true"
            android:layout_marginTop="42dp"
            android:layout_toStartOf="@+id/botonMenos"
            android:hint="Categoría"
            android:textStyle="italic"
            android:textIsSelectable="false" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton"
            android:src="@android:drawable/ic_input_add"
            android:layout_alignBottom="@+id/autoCompleteTextView"
            android:layout_toStartOf="@+id/botonMas"
            android:layout_alignTop="@+id/autoCompleteTextView" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton2"
            android:src="@android:drawable/ic_delete"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignStart="@+id/botonMas"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/imageButton" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/autoCompleteTextView2"
            android:textStyle="italic"
            android:hint="Nombre del producto"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo producto"
            android:id="@+id/textView2"
            android:textStyle="bold|italic"
            android:textSize="22dp"
            android:layout_below="@+id/autoCompleteTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton3"
            android:src="@android:drawable/ic_input_add"
            android:layout_alignTop="@+id/autoCompleteTextView2"
            android:layout_toStartOf="@+id/imageButton4"
            android:layout_alignBottom="@+id/autoCompleteTextView2" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton4"
            android:src="@android:drawable/ic_delete"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_toEndOf="@+id/textView2"
            android:layout_alignBottom="@+id/imageButton3"
            android:layout_marginLeft="10dp" />

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expandableListView"
            android:layout_below="@+id/autoCompleteTextView2"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/editText"
            android:layout_marginTop="5dp" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/editText"
            android:hint="PVP"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

</RelativeLayout>
