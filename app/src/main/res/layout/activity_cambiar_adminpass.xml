<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usuario.comandasrestaurante.cambiar_adminpass">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPassActual"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Introduzca la contraseña actual" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPassNueva"
        android:layout_below="@+id/txtPassActual"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtPassActual"
        android:hint="Introduzca una nueva contraseña" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPassNuevaRepite"
        android:hint="Repita la nueva contraseña"
        android:layout_below="@+id/txtPassNueva"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtPassNueva" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar contraseña"
        android:id="@+id/butCambiarContraseña"
        android:layout_below="@+id/txtPassNuevaRepite"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtPassNuevaRepite" />
</RelativeLayout>
